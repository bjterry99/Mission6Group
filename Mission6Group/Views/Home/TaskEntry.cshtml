@{
    ViewData["Title"] = "Add";
}
@model Mission6Group.Models.TaskResponse

<h1>Add a task</h1>

<form method="post">
    <label asp-for="Task">Task: </label>
    <input asp-for="Task" /><br />
    <label asp-for="DueDate">Due date: </label>
    <input asp-for="DueDate" /><br />
    <label asp-for="Quadrant">Quadrant: </label>
    <select asp-for="QuadrantID">
        <option value="">-- select a category --</option>
        @foreach (Quadrant x in ViewBag.Quadrants)
        {
            <option value="@x.QuadrantID">@x.QuadrantName</option>
        }
    </select><br />
    <label asp-for="CategoryID">Category: </label>
    <select asp-for="CategoryID">
        <option value="">-- select a category --</option>
        @foreach (Category x in ViewBag.Categories)
        {
            <option value="@x.CategoryID">@x.CategoryName</option>
        }
    </select><br />
    <label asp-for="Completed">Completed: </label>
    <select asp-for="Completed">
        <option value="">-- select an option --</option>
        <option>True</option>
        <option>False</option>
    </select><br />
    <input type="submit" value="Submit task" />
</form>